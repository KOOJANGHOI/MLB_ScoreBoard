<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blank_6"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textAlignment="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blank_1"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:gravity="right"
            android:textAlignment="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/f_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/f_Team"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/f_player"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="#3366FF"
            android:text="Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="8sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blank_5"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:gravity="right"
            android:textAlignment="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/sit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/blank_2"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:text=""
                android:textSize="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/b_count"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#33FF00"
                android:gravity="center"
                android:text="Text"
                android:textSize="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_count"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#FFFF66"
                android:gravity="center"
                android:text="Text"
                android:textSize="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/o_count"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="#FF0000"
                android:gravity="center"
                android:text="Text"
                android:textSize="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/blank_3"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textSize="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/f_score"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Text"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="9sp"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/inning"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#FF33CC"
                android:gravity="center"
                android:text="Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/s_score"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Text"
                android:textColor="#000000"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/blank_4"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:gravity="right"
            android:textAlignment="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/s_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/s_team"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/s_player"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="#3366FF"
            android:text="Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="8sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>